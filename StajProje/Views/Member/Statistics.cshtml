@model StajProje.Models.StatisticsModel


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Member Statistics</h3>
        </div>
        <div class="card-body">
            <table class="table table-borderless">
                <tbody>
                    <tr>
                        <th><i class="fas fa-users"></i> Total Members</th>
                        <td>@Model.TotalMembers</td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-male"></i> Male Members</th>
                        <td>@Model.MaleMembers</td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-female"></i> Female Members</th>
                        <td>@Model.FemaleMembers</td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-birthday-cake"></i> Average Age</th>
                        <td>@Model.AverageAge</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
